[user]
        email = {{ user.email }}
        name = {{ user.fullname }}
[http]
        sslVerify = true
[pull]
        recurseSubmodules = true
        initSubmodules = true
[checkout]
        recurseSubmodules = true
        initSubmodules = true
[alias]
        up = pull --recurse-submodules
        co = checkout --recurse-submodules
        hooks = !\"/home/{{ user.name }}/.githooks/bin/githooks\"
[merge]
        tool = vimdiff
[githooks]
        installDir = /home/{{ user.name }}/.githooks
        runner = /home/{{ user.name }}/.githooks/release/base-template.sh
        cloneUrl = https://github.com/stiliajohny/githooks.git
        cloneBranch = master
        useCoreHooksPath = false
[init]
        templateDir = /home/{{ user.name }}/.githooks/templates
